<Window x:Class="MrDuck.Worm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:MrDuck.Worm"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        x:Name="DuckWindow"
        Title="MrDuck" Height="144" Width="144">
    <StackPanel x:Name="MainGrid">
        <Image x:Name="mainImage" gif:ImageBehavior.AnimatedSource="/Images/Idle.gif"
               Height="144" Width="144"/>
    </StackPanel>
</Window>
